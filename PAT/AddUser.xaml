<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAT.AddUser">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="20" Padding="30">
            <Entry x:Name="FirstNameEntry" Placeholder="First Name"/>
            <Entry x:Name="LastNameEntry" Placeholder="Last Name"/>
            <Entry x:Name="EmailEntry" Placeholder="Email"/>
            <Entry x:Name="NumberEntry" Placeholder="Phone Number"/>
            
            <Button Text="Add User" Clicked="OnAddUserClicked"/>
            <Button Text="Cancel" Clicked="Cancel" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>