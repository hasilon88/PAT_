<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAT.Views.Informations">
 <ContentPage.Content>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image Source="infobg.png"
                   Aspect="AspectFill"
                   Grid.Row="0"
                   Grid.RowSpan="2" />

            <ScrollView Grid.Row="0" BackgroundColor="Transparent">
                <Frame
                    CornerRadius="10"
                    Padding="0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="Transparent"
                    BorderColor="Transparent"
                    HasShadow="False">   

                    <VerticalStackLayout
                        Spacing="25"
                        Padding="30"
                        VerticalOptions="Start">

                        <Frame
                            BackgroundColor="#EBE7D8"  
                            Padding="10"
                            CornerRadius="5"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="Start">
                              
                            <Label
                                Text="Mes Infos"
                                FontSize="30"
                                HorizontalOptions="Center"
                                TextColor="Black" />
                        </Frame>

                        <HorizontalStackLayout>
                            <Label Text="Prénom : " FontSize="25" />
                            <Label x:Name="NameEntry" Text="{Binding Name}"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Nom : " FontSize="25" />
                            <Label x:Name="LastNameEntry" Text="{Binding Name}"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </HorizontalStackLayout>
                        <HorizontalStackLayout>
                            <Label Text="Matricule : " FontSize="25" />
                            <Label x:Name="DAEntry" Text="{Binding Name}"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   TextColor="Black" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                    
                </Frame>
            </ScrollView>
            <Button Grid.Row="1"
                    Text="Back"
                    TextColor="Black"
                    FontSize="18"
                    HeightRequest="40"
                    WidthRequest="200"
                    BorderWidth="2"
                    BackgroundColor="#EBE7D8"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Margin="0,30,30,30"
                    Clicked="OnDemandeHome"/>
        </Grid>
        
    </ContentPage.Content>
</ContentPage>