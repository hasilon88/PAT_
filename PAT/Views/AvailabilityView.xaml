<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PAT.Views.AvailabilityView"
             Title="AvailabilityView">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Frame">
                <Setter Property="Padding" Value="10" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="CornerRadius" Value="10" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="BorderColor" Value="Gray" />
                <Setter Property="HasShadow" Value="True" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Frame Padding="10" Margin="10" CornerRadius="10" BackgroundColor="White" BorderColor="Gray" HasShadow="True">
        <StackLayout>
            <Label Text="Card Title" FontSize="Large" FontAttributes="Bold" />
            <Label Text="Card content goes here." />
            <Button Text="Action" />
        </StackLayout>
    </Frame>
</ContentPage>
